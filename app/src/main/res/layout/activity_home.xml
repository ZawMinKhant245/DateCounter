<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="10dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/collectHead"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:text="Been Love Memory"
            android:gravity="center"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content">

        </TextView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_date"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            app:backgroundTint="?colorSecondary"
            android:textColor="?colorOnSecondary"
            android:layout_alignEnd="@id/tvTitle"
            android:text="Edit Date"
            android:textSize="10sp"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle">

        </com.google.android.material.button.MaterialButton>

    </RelativeLayout>
        <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_text"
        app:cardBackgroundColor="#7FEDE0E9"
        android:elevation="8dp"
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/collectHead"
        android:layout_height="250dp">
       <GridLayout
           android:id="@+id/gl_layout"
           android:layout_width="match_parent"
           android:layout_marginTop="20dp"
           android:columnCount="3"
           android:layout_height="wrap_content">
           <TextView

               android:id="@+id/tvYear"
               android:textSize="30sp"
               android:gravity="center"
               android:layout_columnWeight="1"
               android:text="Year">

           </TextView>
           <TextView

               android:id="@+id/tvMonth"
               android:gravity="center"
               android:textSize="30sp"
               android:layout_columnWeight="1"
               android:text="Year">

           </TextView>
           <TextView
               android:id="@+id/tvDayss"
               android:gravity="center"
               android:textSize="30sp"
               android:layout_columnWeight="1"
               android:text="Year">

           </TextView>
           <TextView
               android:textColor="#DE376E"
               android:gravity="center"
               android:textSize="30sp"
               android:textStyle="bold"
               android:layout_columnWeight="1"
               android:text="Year">

           </TextView>
           <TextView
               android:textColor="#DE376E"
               android:gravity="center"
               android:textSize="30sp"
               android:textStyle="bold"
               android:layout_columnWeight="1"
               android:text="Month">

           </TextView>
           <TextView
               android:textColor="#DE376E"
               android:textStyle="bold"
               android:gravity="center"
               android:textSize="30sp"
               android:layout_columnWeight="1"
               android:text="Day">

           </TextView>


       </GridLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"

            android:layout_height="wrap_content">

        </com.google.android.material.divider.MaterialDivider>

        <TextView
            android:id="@+id/tv_days"
            android:layout_width="match_parent"
            android:text="Days"
            android:textStyle="bold"
            android:textSize="23sp"
            android:textColor="#DE376E"
            android:gravity="center"
            android:layout_marginTop="150dp"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:id="@+id/tvText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="has come"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#DE376E"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:textSize="24sp">

        </TextView>


    </com.google.android.material.card.MaterialCardView>


<!--    <RelativeLayout-->
<!--        app:layout_constraintTop_toBottomOf="@id/cv_text"-->
